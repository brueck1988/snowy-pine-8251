<h3>Flights:</h3>
<% @flights.each do |flight| %>
  <section id="flight-<%= flight.id %>">
  <h4>Flight Number: <%= flight.number %>, Airline: <%= flight.airline.name %></h4>
  <p>Passengers: </p>
  <%  flight.passengers.each do |passenger| %>
    <p><%= passenger.name %>
    <%=  button_to "Remove #{passenger.name} from Flight", "/flights/#{flight.id}/passengers/#{passenger.id}", method: :delete %></p>
    <% end %>
  </section>
<% end %>
